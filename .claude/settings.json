{
  "allowedTools": [
    "Edit",
    "Write",
    "Read",
    "Grep",
    "Glob",
    "LS",
    "Bash(npm install:*)",
    "Bash(npm ci:*)",
    "Bash(npm run build:*)",
    "Bash(npm run test:*)",
    "Bash(npm test:*)",
    "Bash(npm run lint:*)",
    "Bash(npm run typecheck:*)",
    "Bash(npm run dev:*)",
    "Bash(npm run format:*)",
    "Bash(npx tsx:*)",
    "Bash(npx vitest:*)",
    "Bash(npx tsc:*)",
    "Bash(npx eslint:*)",
    "Bash(npx prettier:*)",
    "Bash(git init:*)",
    "Bash(git add:*)",
    "Bash(git commit:*)",
    "Bash(git branch:*)",
    "Bash(git checkout:*)",
    "Bash(git switch:*)",
    "Bash(git status:*)",
    "Bash(git log:*)",
    "Bash(git diff:*)",
    "Bash(git merge:*)",
    "Bash(git stash:*)",
    "Bash(git tag:*)",
    "Bash(git rev-parse:*)",
    "Bash(git show:*)",
    "Bash(mkdir:*)",
    "Bash(cat:*)",
    "Bash(head:*)",
    "Bash(tail:*)",
    "Bash(wc:*)",
    "Bash(find:*)",
    "Bash(ls:*)",
    "Bash(pwd:*)",
    "Bash(echo:*)",
    "Bash(touch:*)",
    "Bash(cp:*)",
    "Bash(mv:*)",
    "Bash(rm -rf node_modules:*)",
    "Bash(rm -rf dist:*)",
    "Bash(rm -rf coverage:*)",
    "Bash(rm:tests/fixtures/tmp/*)",
    "Bash(rm:*.tmp)",
    "Bash(rm:/tmp/*)"
  ],
  "permissions": {
    "allow": [
      "Read(**)",
      "Edit(**)",
      "Write(**)"
    ],
    "deny": [
      "Bash(rm -rf /)*",
      "Bash(rm -rf ~)*",
      "Bash(rm -rf .)*",
      "Bash(sudo:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(chmod 777:*)"
    ]
  }
}
